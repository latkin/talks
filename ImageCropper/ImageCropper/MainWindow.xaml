<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Image cropper" Height="600" Width="800">
    <!-- this is not meant to represent best practices for UI development! -->
    <Canvas Name="canvas" HorizontalAlignment="Left" Height="553" Margin="10,10,0,0" VerticalAlignment="Top" Width="775">
        <Button Name="loadButton" Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="20" Canvas.Left="10" Canvas.Top="10"/>
        <Image Name="mainImage" MaxWidth="780" MaxHeight="475" Panel.ZIndex="1"  HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="68"/>
        <TextBox Name="fileNameTextBox" IsEnabled="False" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="495" Canvas.Left="165" Canvas.Top="10"/>
        <Rectangle Name="mainRect" Panel.ZIndex="1" Visibility="Hidden" Height="215" Canvas.Left="221" Stroke="Red" StrokeThickness="2" Canvas.Top="131" Width="298"/>
        <Button Name="saveButton" Content="Save cropped image" Canvas.Left="10" Canvas.Top="35" Width="150" Height="20" IsEnabled="False"/>
        <TextBlock Name="saveFileTextBox" IsEnabled="False" Height="20" Canvas.Left="165" TextWrapping="Wrap" Text="" Canvas.Top="35" Width="495"/>
    </Canvas>
</Window>